<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LocalFiles.LocalFile"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp">


<EditText
    android:id="@+id/personneName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:layout_alignParentTop="true"
    android:hint="Name"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<ImageView
    android:id="@+id/imagepersonne"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_below="@+id/personneName"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginStart="126dp"
    android:layout_marginLeft="126dp"
    android:layout_marginTop="29dp"
    app:srcCompat="@mipmap/ic_launcher" />

<Button
    android:id="@+id/btnChoiseFile"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/imagepersonne"
    android:layout_marginStart="-129dp"
    android:layout_marginLeft="-129dp"
    android:layout_marginBottom="-103dp"
    android:layout_toEndOf="@+id/imagepersonne"
    android:layout_toRightOf="@+id/imagepersonne"
    android:text="Choose images" />

<Button
    android:id="@+id/btnAddPersonne"
    android:layout_width="67dp"
    android:layout_height="63dp"
    android:layout_alignBottom="@+id/imagepersonne"
    android:layout_marginStart="-4dp"
    android:layout_marginLeft="-4dp"
    android:layout_marginBottom="-397dp"
    android:layout_toEndOf="@+id/imagepersonne"
    android:layout_toRightOf="@+id/imagepersonne"
    android:text="Add" />
